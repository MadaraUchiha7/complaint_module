<%-include('include/_header')%>
 <!-- Main Site -->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Complaints</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Complaint</h2>
            <span class="text-light">Use the below form to update a complaint</span>
        </div>
       <!-- add user form -->
  <form  method="POST" id="update_complaint">
    <div class="new_complaint">
        <div class="form-group">
            <label for="name" class="text-light">Resident Id</label>
            <input type="hidden" name="id" value="<%= complaint._id %>">
            <input type="text" name="residentId" value="<%= complaint.residentId %>">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Assigned To</label>
            <input type="text" name="assignedTo" value="<%= complaint.assignedTo %>">
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="status" value="Open"<%= complaint.status == 'Open'? 'checked':'' %>>
                <label for="radio-1" class="radio-label">Open</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="status" value="In Progress"<%= complaint.status == 'In Progress'? 'checked':'' %>>
                <label for="radio-2" class="radio-label">In Progress</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="Closed"<%= complaint.status == 'Closed'? 'checked':'' %>>
                <label for="radio-3" class="radio-label">Closed</label>
            </div>
        </div>

        <div class="form-group">
                <label for="name" class="text-light">Description</label>
                <textarea type="text" name="description"  rows="4" cols="50"><%= complaint.description  %></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn1 text-dark update">Submit</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<%-include('include/_footer')%>
